<!DOCTYPE html>
<html>
<head>
  <title>Prophetic Coaching</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= include_gon %>

  <% if params[:controller] == "info" %>
    <title>info Propheticcc Coaching</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:400,300,700' rel='stylesheet' type='text/css'>
  <%end%>
</head>
<body>
<% if params[:controller] != "info" %>
<% if current_user %>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">Prophetic Coaching</a>

      <div class="nav-collapse">
        <ul class="nav">
          <% if current_user %>
            <li><%= link_to "Admin Panel", admin_users_path if current_user.has_role?(:admin) %></li>
            <li><%= link_to "View Coaches Schedule", events_path %></li>
            <li><%= link_to "My Mentees", mentees_path %></li>
            <li><%= link_to "Search Resource", ebooks_path %></li>
            <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
            <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
            <li> <%= "Welcome #{current_user.first_name} #{current_user.last_name}" %> </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="container">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <div class="alert text-center alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg.html_safe, :id => "flash_#{name}" %>
      </div>
    <% end %>
  <% end %>
  <div class="row">
    <div class="span1"></div>
    <!-- <div class="span9"><%= yield %></div> -->
  </div>
</div>

<% if current_user %>
  <%= evnolve_html_code(current_user) %>
<% end %>
<% else %>
<div ><%= yield %></div>
<% end %>

<script type="text/javascript">
  authenticity_token = "<%= form_authenticity_token %>"
</script>


</body>
</html>
