<% if current_user %>
<div id="chatfloat">
  <div id="title_bar">
    <div id="button">
      <div id="button_sign">-</div>
    </div>
  </div>
  <div id="hide_element"></div>
  <div id="chathead">
   <!-- <div id="chatwing-embedded-c4a06722-f25b-45ae-b3af-4f1294e07c1d"></div> -->
   <div id="chatwing-embedded-4b2c65b0-1fe9-11e5-bb95-118a04db77e4"></div>
  </div>
</div>
<script type="text/javascript">

  window.chatwingSession = '<%= @encryptedsession %>';
  if(sessionStorage.getItem("chat_down") == "1")
  {
    $("#chathead").slideToggle();
    document.getElementById("button_sign").style.marginTop = '-10px';
    document.getElementById("button_sign").style.marginLeft = '1px';
    $("#button_sign").html("+");
  }
  $("#button").click(function(){
    // if($("#button_sign").html() == "-"){
      if($("#button_sign").text() == "-"){
        // $(this).html("+");
        document.getElementById("button_sign").style.marginTop = '-10px';
        document.getElementById("button_sign").style.marginLeft = '1px';
        $("#button_sign").html("+");
        sessionStorage.setItem("chat_down", "1");
    }
    else{
        // $(this).html("-")
        document.getElementById("button_sign").style.marginTop = '-11px';
        document.getElementById("button_sign").style.marginLeft = '4px';
        $("#button_sign").html("-");
        sessionStorage.setItem("chat_down", "0");
    }
    $("#chathead").slideToggle();
  });

</script>

<% end %>