<%= stylesheet_link_tag "/assets/active_admin.css" %>

<%- model_class = Ebook -%>
<table class="table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th> Page No</th>
    <th> Matched Text</th>
  </tr>
  </thead>
  <tbody id="ebook_search" style="font-size: 14px">
  <% pages ||= [] %>
  <%= render :partial => "/admin/ebooks/display_search_result", :locals => {:pages => @pages} %>
  </tbody>
</table>

<div id="ebook_search_paginator">
     <%= paginate @pages, :remote => true, :param_name => "page" %>
</div>