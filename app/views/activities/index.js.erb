$(document).ready(function () {
		$('tbody#activities').html('<%= escape_javascript render :partial => "/activities/activity", :locals => {:activities => @activities} %>');
		$('#activity_paginator').html('<%= escape_javascript(paginate(@activities, :remote => true, :param_name => 'activity_page').to_s) %>');
		$("td#activity_body").highlight($("input#query").val());
});