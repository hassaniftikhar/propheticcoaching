<%- model_class = Activity -%>
<div class="page-header">
  <h1><%= t '.title', :default => Activity.name.pluralize.titleize %></h1>
</div>

<%= form_tag search_activities_path, :id => "search_activity", method: :get do %>
  <p>
    <%= text_field_tag :category, params[:category] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:body) %></th>
    <th> Page No</th>
    <th> Matched Text</th>
  </tr>
  </thead>
  <tbody>
  <% @pages ||= [] %>
  <% @pages.each do |page| %>
    <tr>
      <td><%= page.body %></td>
      <td>
      <td id="tags"> <%= page.tags %> </td>
    </tr>

  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_activity_path,
            :class => 'btn btn-primary' %>
