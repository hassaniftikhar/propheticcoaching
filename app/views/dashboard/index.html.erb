<h2 class="tablehead">Appointments</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Created at</th>

    </tr>
  </thead>

  <tbody id="appointments">
    <%= render partial: 'appointments' %>
  </tbody>
</tbody>
</table>
<div id="appointmentpaginator">
  <%= paginate @coach_events, :remote => true, :param_name => 'evnt' %>
</div>
<br>

<h2 class="tablehead">Sessions</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Created at</th>
      <th>Session With</th>

    </tr>
  </thead>

  <tbody id="coachmeetings">
   <%= render  'coachmeetings' %>
 </tbody>
</table>
<div id="meetingspaginator">
  <%= paginate @coach_meetings , :remote => true, :param_name => 'meet' %>
</div>
<br>
<h2 class="tablehead">Mentees</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>E-mail</th>
      <th>Date of Birth</th>
      <th>Availability</th>
      <th>Prophecy</th>
      <th>Calendar Schedule</th>
    </tr>
  </thead>

  <tbody id="mentees">

   <%= render  'mentees' %>

   

 </tbody>
</table>
<div id="paginator">
  <%= paginate @mentees, :remote => true, :param_name => 'ment' %>
</div>

<br>
<br>

<h2 class="tablehead">Calendars</h2>
<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Coach Calendar</a></li>
    <li><a href="#tabs-2">All Coaches Calendar</a></li>
  </ul>

  <div id="tabs-1">
    <h2>Coach Calendar</h2>

    <p>
      <strong>Coach Name:</strong>
      <%= @current_user.name %>
    </p>

    <div id='calendar'>
      <%= render :partial => "/events/actions_dialog", :locals => {:profile => @current_user, :dashboard => true} %>
    </div>
  </div>

  <div id="tabs-2">
    <h2>Coaches Calendar</h2>

    <div id='coaches_calendar'>
      <%= render :partial => "/events/actions_dialog", :locals => {:profile => nil, :dashboard => true} %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $( "#tabs" ).tabs();
</script>
