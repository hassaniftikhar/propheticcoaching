<h1>Best Features</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @best_features.each do |best_feature| %>
      <tr>
        <td><%= best_feature.title %></td>
        <td><%= best_feature.description %></td>
        <td><img src="<%= best_feature.image_url(:thumb) %>" alt="" /></td>
        <td><%= link_to 'Show', best_feature %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>