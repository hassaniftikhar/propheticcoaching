
<h2>Listing coaches</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Index</th>
      <th>Show</th>
      <th>Mentees Count</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.first_name %></td>
        <td><%= coach.last_name %></td>
        <td><%= coach.mentees.count %></td>
        <td><%= link_to 'Show', coach_path(coach), :class => 'btn btn-mini'%></td>

      </tr>
    <% end %>
  </tbody>
</table>


