<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="divider">BEST FEATURES</h1>
    </div>
  </div>
  <div class="row">
    <% @best_features.each do |best_feature| %>
      <div class="col-md-3 col-sm-6">
        <div class="feature-box">
          <h3 class="feature-box-title text-center"><%= best_feature.title %></h3>
          <img class=" img-responsive" src="<%= best_feature.image %>"/>
          <p class="feature-box-text text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut vitae aliquet tortor, et volutpat justo. Vivamus convallis consequat lectus, sit amet interdum sem congue sit amet. </p>
          <p class="feature-box-more text-center"><a href= "<%= best_feature_path(best_feature) %>" >More info</a></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h1 class="divider">BENEFITS</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <ul class="benefits">
        <% @benefits.each do |benefit| %>
          <li><i class="glyphicon glyphicon-chevron-right"></i> 
            <%= truncate(h(benefit.title), :length => 60,  :separator => ' ', :omission => " ...")%>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6 hidden-xs hidden-sm"> <img class="img-responsive" src="/assets/laptop.png"/> </div>
  </div>
</div>
