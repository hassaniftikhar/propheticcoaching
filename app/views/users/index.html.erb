
<h2>Listing Coaches</h2>

<%- model_class = Ebook -%>
<div class="page-header">
  <h1><%= t '.title', :default => "Coach".pluralize.titleize %></h1>
</div>

<%= form_tag users_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-mail</th>
      <th>Partners Count</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.mentee_count %></td>
        <td><%= link_to 'Show', user_path(user), :class => 'btn btn-mini'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>



