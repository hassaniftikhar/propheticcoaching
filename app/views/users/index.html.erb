
<h2>Listing Coaches</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Index</th>
      <th>Show</th>
      <th>Mentees Count</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.mentees.count %></td>
        <td><%= link_to 'Show', user_path(user), :class => 'btn btn-mini'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>



