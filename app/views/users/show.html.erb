<p id="notice"><%= notice %></p>

<p>
  <% if can? :read, @users %>
  <%= link_to "Back", users_path %>
    <% end %>
</p>

<p>
  <strong>User Name:</strong>
  <%= @user.name %>
</p>

<h3> Listing Mentees </h3>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Availability</th>
    <th>Prophecy</th>
    <th>Calendar Schedule</th>
  </tr>
  </thead>

  <tbody>
  <% @user.mentees.each do |mentee| %>
    <tr>
      <td><%= link_to mentee.name, user_mentee_path(@user, mentee) %></td>
      <td><%= mentee.email %></td>
      <td><%= mentee.availability %></td>
      <td><%= mentee.prophecy %></td>
      <td><%= link_to "View", mentee_events_path(mentee) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
