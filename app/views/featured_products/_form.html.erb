<%= simple_form_for @featured_product ||= FeaturedProduct.new, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <% if @featured_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@featured_product.errors.count, "error") %> prohibited this featured_product from being saved:</h2>

      <ul>
      <% @featured_product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, (@featured_product.new_record? ? "Create " : "Update ") +"Featured Product", :class => 'btn-primary' %>
