<h1>Featured Products</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Magento Link(URL)</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @featured_products.each do |featured_product| %>
      <tr>
        <td><img src="<%= featured_product.image_url(:thumb) %>" alt="" /></td>
        <td><%= featured_product.title %></td>
        <td><%= featured_product.description %></td>
        <td><%= featured_product.price %></td>
        <td><%= link_to featured_product.url, featured_product.url %></td>
        <td><%= link_to 'Show', featured_product %></td>
      </tr>
    <% end %>
  </tbody>
</table>