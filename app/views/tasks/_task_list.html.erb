<%= button_tag "Send Email", :id => "emailbtn", :type => "button" %>
<%= text_field_tag("mytestf")%>
<% @tasks.each do |task| %>
<tr>

	<td><%= check_box_tag "tasks_ids[]", task.id ,class: 'mycheckbox'%></td>
	<td><%= best_in_place task, :description, :type => :input, :path => user_mentee_task_path(coach, mentee, task) %></td>
	<td><%= best_in_place task, :starttime,  :classes => 'mydatetime', :type => :input, :path => user_mentee_task_path(coach, mentee, task) %></td>
	<td><%= best_in_place task, :endtime,  :classes => 'mydatetime', :type => :input, :path => user_mentee_task_path(coach, mentee, task) %></td>
	
	<td>

		<%= best_in_place task, :status, type: :select, collection: [["Pending", "Pending"], ["Inprocess", "Inprocess"], ["Completed", "Completed"]], :path => user_mentee_task_path(coach, mentee, task)  %>
	</td>


</tr>
<% end %>
<script type="text/javascript">

	var val = [];
	var userid = <%= @user.id %>
	var menteeid = <%= @mentee.id %>

	$('#emailbtn').click(function () {

		//$(':checkbox:checked').each(function(i){
			$('input[name="tasks_ids[]"]:checked').each(function(i){

				val[i] = $(this).val();
			});

			alert(val);
			jQuery.ajax({
				data: 'tasks_ids[]=' + val,
				dataType: 'json',
				type: 'post',
				url: "/users/" + userid + "/mentees/"+ menteeid + "/tasks/email_multiple"
			});

		});

	

	$('.mydatetime').datetimepicker({
		

		allowTimes:[
		'12:00','12:15','12:30','12:45',
		'13:00','13:15','13:30','13:45',
		'14:00','14:15','14:30','14:45',
		'15:00','15:15','15:30','15:45',
		'16:00','16:15','16:30','16:45',
		'17:00','17:15','17:30','17:45',
		'18:00','18:15','18:30','18:45',
		'19:00','19:15','19:30','19:45',
		'20:00','20:15','20:30','20:45',
		'21:00','21:15','21:30','21:45',
		'09:00','09:15','09:30','09:45',
		'10:00','10:15','10:30','10:45',
		'11:00','11:15','11:30','11:45',


		]

	});

</script>





