<div class="container">
  <div class="row margin-bottom-50">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <form class="form-horizontal">
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
          <div class="form-group">
            <label class="col-sm-4 control-label">First Name</label>

            <div class="col-sm-8">
              <%= f.input :first_name, placeholder: 'First Name', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Last Name</label>

            <div class="col-sm-8">
              <%= f.input :last_name, placeholder: 'Last Name', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %>  
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Address</label>

            <div class="col-sm-8">
              <%= f.input :address, placeholder: 'Address', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %>  

            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Home Phone</label>

            <div class="col-sm-8">
              <%= f.input :home_phone, placeholder: 'Phone', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %> 
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Availability</label>

            <div class="col-sm-8">

              <%= f.input :availablity_time, :as => :select, :collection => {"Morning" => "morning", "Afternoon" => "afternoon", "Evening" => "evening"},label: false, input_html: { class: 'form-control' } %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Best Time to call</label>

            <div class="col-sm-8">
              <div class="input-group bootstrap-timepicker">
                <%= f.input :best_time_to_call, label: false, input_html: { class: 'form-control' } %>
                <span class="input-group-addon"><i class="fa fa-times"></i></span></div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Date of Birth</label>

            <div class="col-sm-8">
              <%= f.input :date_of_birth, :start_year => Time.now.year - 70, label: false, input_html: { class: 'form-control',  id: 'dp1'} %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Email</label>

            <div class="col-sm-8">
              <%= f.input :email, placeholder: 'Email', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Password</label>

            <div class="col-sm-8">
              <%= f.input :password, :autocomplete => "off", placeholder: "Leave blank if not required", :required => false, input_html: { class: 'form-control' }, label: false %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Password Confirmation</label>

            <div class="col-sm-8">
              <%= f.input :password, :autocomplete => "off", placeholder: "Leave blank if not required", :required => false, input_html: { class: 'form-control' }, label: false %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Current Password</label>

            <div class="col-sm-8">
              <%= f.input :current_password, :autocomplete => "off", placeholder: "Enter current password to confirm changes", :required => true, input_html: { class: 'form-control' }, label: false %>

            </div>
          </div>
            <div class="form-actions">
              <%= f.button :submit, "Update" %>
            </div>
        <% end %>
      </form>
    </div>
  </div>
  <div class="row margin-bottom-50 margin-top-50">
  <div class="col-xs-12">
   <div id="calendar">
    <%= render :partial => "/events/actions_dialog", :locals => {:profile => resource} %>
  </div>
