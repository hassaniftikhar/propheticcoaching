<div class="login-content text-center"> <img class="login-logo" src="/assets/Prophetic-Coaching-logo.png"/>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <!--  <%= f.error_notification %> -->
  <div class="admin-login-form">
    <h2><span style="color:#06F">Sign</span>Up</h2>
			<%= f.input :first_name, placeholder: 'First Name', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %> 				
      <%= f.input :last_name, placeholder: 'Last Name', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %> 	
			<%= f.input :home_phone, placeholder: 'Phone', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %> 
			<%= f.input :email, placeholder: 'Email', :required => true, :autofocus => true, label: false, input_html: { class: 'form-control' }  %>  
			<%= f.input :password, placeholder: 'Password', :required => true, label: false, input_html: { class: 'form-control' } %>
      <%= f.submit "Sign Up",class: "btn btn-block btn-primary" %>
    
    <div class="row margin-top-20">
      <div class="col-xs-6 text-right ">
        <p>New member?</p>
        <a href="">Rigister new account</a> </div>
      <div class="col-xs-6 border-left text-left">
        <div class="admin-login-bottom">
            <%= f.input :remember_me,  :as => :boolean, label: 'Keep me signed in' if devise_mapping.rememberable? %>
          <div class="clearfix"></div>
          <a href="/users/password/new">Forgot my password</a> 
        </div>
      </div>
    </div>
  </div>
<% end %>    
